<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Create a new room</title>
</head>

<body>
    <h1>Create a new room</h1>
    
    <% if (error) { %>
        <p style="color: red;">
            <%= error %>
        </p>
        <% } %>

    <form action="/create_room" method="POST">
        <!-- Room Name -->
        <div class="form-group">
            <label for="roomName">Room Name:</label>
            <input type="text" id="roomName" name="roomName" required>
        </div>
    
        <!-- People to Invite -->
        <div class="form-group">
            <p>People to invite:</p>
            <% if (userList && userList.length> 0) { %>
                <% userList.forEach(function(user) { %>
                    <div class="checkbox-item">
                        <input type="checkbox" id="user_<%= user.user_id %>" name="inviteUsers" value="<%= user.user_id %>">
                        <label for="user_<%= user.user_id %>">
                            <%= user.username %>
                        </label>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No people to invite.</p>
                            <% } %>
        </div>
    
        <!-- Submit Button -->
        <button type="submit">Create a new room</button>
    </form>
</body>

</html>