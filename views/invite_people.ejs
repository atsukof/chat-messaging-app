<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Invite people</title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gray-100 min-h-screen">
  <div class="container mx-auto p-6">
    <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
      <h1 class="text-2xl font-bold text-gray-800 mb-6">Invite people to the room</h1>
      
      <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= error %>
      </div>
      <% } %>
      
      <div class="text-center mb-6">
          <img src="/invite.jpeg" alt="invite new people" class="rounded-lg shadow-md mx-auto" style="max-width:200px;">
      </div>

      <h2 class="text-xl font-semibold text-gray-800 mb-4">Room: <%= roomName[0].room_name %></h2>

      <form action="/invite_people/<%= roomId %>" method="POST" class="space-y-4">    
          <!-- People to Invite -->
          <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">People to invite:</label>
              <div class="space-y-2 max-h-64 overflow-y-auto border border-gray-300 rounded p-4">
                  <% if (peopleToInvite && peopleToInvite.length> 0) { %>
                      <% peopleToInvite.forEach(function(user) { %>
                          <div class="flex items-center">
                              <input type="checkbox" id="user_<%= user.user_id %>" name="inviteUsers" value="<%= user.user_id %>" class="mr-2">
                              <label for="user_<%= user.user_id %>" class="text-sm text-gray-700">
                                  <%= user.username %>
                              </label>
                          </div>
                          <% }); %>
                              <% } else { %>
                                  <p class="text-gray-500 text-sm">No people to invite.</p>
                                  <% } %>
              </div>
          </div>
      
          <!-- Submit Button -->
          <button type="submit" class="btn w-full">Invite</button>
      </form>
    </div>
  </div>
</body>

</html>